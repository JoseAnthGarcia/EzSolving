<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="pe.edu.pucp.ezsolving">

    <uses-permission android:name="android.permission.WAKE_LOCK" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_ezsolving"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_ezsolving_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EzSolving">
        <activity android:name=".ComentarioPublicacinActivity"></activity>


        <!--
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.
        -->
        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" />

        <activity
            android:name=".FinalPublicacionActivity"
            android:exported="false" />
        <activity
            android:name=".EmpezarPublicacionActivity"
            android:exported="false" />
        <activity
            android:name=".ListaCategoriasActivity"
            android:exported="false" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>